{
  "name": "magus-monorepo-root",
  "private": true,
  "workspaces": [
    "packages/*",
    "sites/*"
  ],
  "scripts": {
    "setup": "lerna run lerna:setup --stream",
    "bootstrap": "lerna bootstrap",
    "test": "lerna run test --stream",
    "test:lint": "eslint .",
    "test:deps": "syncpack list-mismatches",
    "test:deps:fix": "syncpack fix-mismatches && syncpack fix-mismatches",
    "commit": "yarn cz",
    "cm": "yarn commit",
    "publish:all": "lerna publish from-package -y --no-verify-access",
    "db:hasura": "./scripts/hasura.sh"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.4.2",
    "@changesets/cli": "^2.18.1",
    "@commitlint/cli": "^15.0.0",
    "@commitlint/config-conventional": "^15.0.0",
    "eslint": "^7.32.0",
    "husky": "^7.0.4",
    "jest": "^27.4.3",
    "lerna": "^4.0.0",
    "prettier": "^2.5.1",
    "syncpack": "^5.8.15"
  }
}
