{
  "name": "magus-monorepo-root",
  "private": true,
  "workspaces": [
    "packages/*",
    "sites/*"
  ],
  "scripts": {
    "=== install ===": "",
    "setup": "lerna run lerna:setup --stream",
    "bootstrap": "lerna bootstrap",
    "=== tests ===": "",
    "test": "lerna run test --stream",
    "lint": "eslint .",
    "lint:deps": "syncpack list-mismatches",
    "lint:deps:fix": "syncpack fix-mismatches && syncpack fix-mismatches",
    "=== versions and publishing ===": "",
    "commit": "yarn cz",
    "cm": "yarn commit",
    "publish:all": "lerna publish --conventional-commits",
    "=== databases ===": "",
    "db:hasura": "./scripts/hasura.sh"
  },
  "devDependencies": {
    "@magusn/eslint-config-magusn": "^0.2.2",
    "commitizen": "^4.2.4",
    "cz-conventional-changelog": "^3.2.0",
    "eslint": "^7.32.0",
    "jest": "^27.4.3",
    "lerna": "^4.0.0",
    "prettier": "^2.5.1",
    "syncpack": "^5.8.15"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
